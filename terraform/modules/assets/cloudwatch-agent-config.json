{
  "metrics":{
    "metrics_collected":{
      "cpu": {
        "resources": [
          "*"
        ],
        "measurement": [
          {"name": "cpu_usage_idle", "unit": "Percent"},
          {"name": "cpu_usage_nice", "unit": "Percent"},
          "cpu_usage_guest"
        ],
        "totalcpu": false
      },
      "disk": {
        "resources": [
          "/",
          "/tmp"
        ],
        "measurement": [
          {"name": "free", "unit": "Gigabytes"},
          "total",
          "used"
        ],
         "ignore_file_system_types": [
          "sysfs", "devtmpfs"
        ],
        "metrics_collection_interval": 60
      },
      "diskio": {
        "resources": [
          "*"
        ],
        "measurement": [
          "reads",
          "writes",
          "read_time",
          "write_time",
          "io_time"
        ],
        "metrics_collection_interval": 60
      },
      "swap": {
        "measurement": [
          "swap_used",
          "swap_free",
          "swap_used_percent"
        ]
      },
      "mem": {
        "measurement": [
          "mem_used",
          "mem_cached",
          "mem_total"
        ],
        "metrics_collection_interval": 1
      },
      "net": {
        "resources": [
          "eth0"
        ],
        "measurement": [
          "bytes_sent",
          "bytes_recv",
          "drop_in",
          "drop_out"
        ]
      },
      "netstat": {
        "measurement": [
          "tcp_established",
          "tcp_syn_sent",
          "tcp_close"
        ],
        "metrics_collection_interval": 60
      },
      "processes": {
        "measurement": [
          "running",
          "sleeping",
          "dead"
        ]
      },
      "statsd":{}
    },
    "append_dimensions": {
      "ImageId": "\${aws:ImageId}",
      "InstanceId": "\${aws:InstanceId}",
      "InstanceType": "\${aws:InstanceType}",
      "AutoScalingGroupName": "\${aws:AutoScalingGroupName}"
    },
    "aggregation_dimensions" : [["AutoScalingGroupName"], ["InstanceId", "InstanceType"],[]]
  },
  "logs": {
    "logs_collected": {
      "files": {
        "collect_list": [
          {
            "file_path": "/opt/aws/amazon-cloudwatch-agent/logs/amazon-cloudwatch-agent.log",
            "log_group_name": "${environment}/flu-api/amazon-cloudwatch-agent.log",
            "log_stream_name": "{local_hostname}/{instance_id}",
            "timezone": "UTC"
          },
          {
            "file_path": "/var/log/nginx/access.log",
            "log_group_name": "${environment}/flu-api/nginx-access.log",
            "log_stream_name": "{local_hostname}/{instance_id}",
            "timezone": "UTC"
          },
          {
            "file_path": "/var/log/nginx/error.log",
            "log_group_name": "${environment}/flu-api/nginx-error.log",
            "log_stream_name": "{local_hostname}/{instance_id}",
            "timezone": "UTC"
          },
          {
            "file_path": "/setup.log",
            "log_group_name": "${environment}/flu-api/terraform-setup.log",
            "log_stream_name": "{local_hostname}/{instance_id}",
            "timezone": "UTC"
          },
          {
            "file_path": "/home/api/.pm2/pm2.log",
            "log_group_name": "${environment}/flu-api/pm2.log",
            "log_stream_name": "{local_hostname}/{instance_id}",
            "timezone": "UTC"
          },
          {
            "file_path": "/home/api/.pm2/logs/api-out.log",
            "log_group_name": "${environment}/flu-api/pm2.log",
            "log_stream_name": "{local_hostname}/{instance_id}",
            "timezone": "UTC"
          },
          {
            "file_path": "/home/api/.pm2/logs/api-error.log",
            "log_group_name": "${environment}/flu-api/pm2.log",
            "log_stream_name": "{local_hostname}/{instance_id}",
            "timezone": "UTC"
          }
        ]
      }
    },
    "log_stream_name": "fluapi.log"
  }
}