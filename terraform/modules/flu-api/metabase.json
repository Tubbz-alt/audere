[
  {
    "name": "${container_name}",
    "image": "${image}",
    "portMappings": [
      {
        "containerPort": 3000,
        "hostPort": 80
      }
    ],
    "memoryReservation": 600,
    "essential": true,
    "environment": [
      {
        "name": "MB_DB_TYPE",
        "value": "postgres"
      },
      {
        "name": "MB_DB_DBNAME",
        "value": "metabase"
      },
      {
        "name": "MB_DB_HOST",
        "value": "${db_host}"
      },
      {
        "name": "MB_DB_PORT",
        "value": "5432"
      }
    ],
    "secrets": [
      {
        "name": "MB_DB_USER",
        "valueFrom": "arn:aws:ssm:${region}:${account}:parameter/${db_user_key}"
      },
      {
        "name": "MB_DB_PASS",
        "valueFrom": "arn:aws:ssm:${region}:${account}:parameter/${db_pass_key}"
      },
      {
        "name": "MB_ENCRYPTION_SECRET_KEY",
        "valueFrom": "arn:aws:ssm:${region}:${account}:parameter/${encryption_secret_key}"
      }
    ]
  }
]