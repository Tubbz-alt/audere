  "dependencies": {
    "audere-lib": "file:../../lib",
    "firebase-admin": "^8.0.0",
    "firebase-functions": "^3.1.0"
  },
  "devDependencies": {
    "typescript": "^3.2.2"
  },
  "private": true
}
